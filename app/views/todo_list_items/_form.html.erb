<%= form_for @todo_list_item, :html => { :class => "form-horizontal todo_list_item" } do |f| %>

  <% if @todo_list_item.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@todo_list_item.errors.count, "error") %> prohibited this todo_list_item from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @todo_list_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :content, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :deadline, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.datetime_select :deadline, :class => 'form-control'  %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                todo_list_items_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
